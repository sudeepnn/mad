<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="94dp"

            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/lightpurple" />

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/view"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/searchbar"
            android:iconifiedByDefault="false"
            android:queryHint="Search Venue">

        </SearchView>

        <LinearLayout
            android:id="@+id/registration_buttons"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/view"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/sentbtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@color/darkpurple"
                android:clickable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_send_24"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="Sent"
                    android:textColor="@color/white" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@color/lightpurple"
                android:clickable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_correct"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="Accepted"
                    android:textColor="@color/white" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@color/lightpurple"
                android:clickable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_wrong"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="Rejected"
                    android:textColor="@color/white" />
            </FrameLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registration_buttons"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registration_buttons"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    app:cardUseCompatPadding="true"
                    android:layout_width="411dp"
                    android:layout_height="369dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center"
                    app:cardCornerRadius="10dp"

                    app:cardElevation="11dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/busmantap" />

                    <RelativeLayout
                        android:layout_width="381dp"
                        android:layout_height="228dp"
                        android:layout_gravity="bottom">

                        <TextView
                            android:id="@+id/busmantap"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp"

                            android:fontFamily="@font/poppins_medium"
                            android:text="Bus Mantap"
                            android:textAlignment="center"
                            android:textColor="@color/lightpurple"
                            android:textSize="30dp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="31dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginBottom="161dp"
                            android:drawableStart="@drawable/baseline_supervisor_account_24"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="  Talk on DBMS"
                            android:textAlignment="inherit"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="34dp"
                            android:layout_marginEnd="9dp"
                            android:layout_marginBottom="12dp"
                            android:drawableStart="@drawable/baseline_supervisor_account_24"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="  250 People"
                            android:textAlignment="inherit"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="34dp"
                            android:layout_marginEnd="9dp"
                            android:layout_marginBottom="50dp"
                            android:drawableStart="@drawable/baseline_supervisor_account_24"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="  Required"
                            android:textAlignment="inherit"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="31dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginBottom="126dp"
                            android:drawableStart="@drawable/baseline_access_time_24"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="  02:00 PM to 03:00 PM"
                            android:textAlignment="inherit"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="33dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="87dp"
                            android:drawableStart="@drawable/baseline_calendar_today_24"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="  24-05-2023"
                            android:textAlignment="inherit"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/button"
                            android:layout_width="134dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="28dp"
                            android:layout_marginBottom="14dp"
                            android:background="@drawable/lightpurplebtn"
                            android:text="CANCLE"
                            android:textColor="@color/white" />

                    </RelativeLayout>


                </android.support.v7.widget.CardView>






            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</FrameLayout>